// vim:ft=conf
{
    "layer": "top",
        "position": "top",
        "output": ["DP-1", "HDMI-A-1"],
        "margin-left": 20,
        "margin-right": 20,
        "margin-top": 10,

        "modules-left": [
            "group/workspace",
        "group/stats",
        ],
        "modules-center": [

            "custom/spotify",
            "custom/pomodoro",

        ],
        "modules-right": [
            "group/notifications",
        ],

        // Modules configuration
        "custom/pomodoro": {
            "format": "{}",
            "pause": " Û∞∏â ",
            "return-type": "json",
            "exec": "waybar-module-pomodoro -a '' -p '' -o ''",
            "on-click": "waybar-module-pomodoro toggle",
            "on-click-right": "waybar-module-pomodoro reset",
        },
        "hyprland/workspaces": {
            "format": "{icon}",
            "format-icons": {
                "1": "Û∞àπ",
                "2": "ÔçØ",
                "3": "ÔÅª",
                "4": "ÔÜº",
                "5": "Û∞àô",
                "6": "Ôáø",
                "7": "Û∞†Æ",
                "8": "ÓÆ¥",
                "9": "ÓÆ¥",
                "10": "ÓÆ¥",
                "urgent": "ÔÅ™",
                "default": "ÔÑë"
            },
            "on-scroll-up": "hyprctl dispatch workspace e+1",
            "on-scroll-down": "hyprctl dispatch workspace e-1", 
            "all-outputs": true,
        },
        "custom/spotify": {
            "exec": "$HOME/.scripts/spotify.sh",
            "max-length": 75,
            "format": " {}",
            "on-click": "sleep 0.1 && eww open --toggle dashboard",
            "tooltip": false
        },
        "custom/wallpaper": {
            "format": " Û∞∏â ",
            "on-click": "sleep 0.1 && bash ~/.scripts/quotes-randomizer.sh",
            "tooltip": false,
        },
        "hyprland/window": {
            "format": "{}",
            "max-lenght": 30,
            "rewrite": {
                "(.*) - Mozilla Firefox": "üåé firefox",
                "org.pwmt.zathura": "üì∞ zathura",
                "Spotify": "üéº spotify",
            },
            "separate-outputs": true
        },
        "tray": {
            "icon-size": 18,
            "spacing": 5,
            "show-passive-items": true,
            "format": "{label}",
            "label": " | ",
        },

        "clock": {
            "interval": 60,
            "format": " ÔÅ≥  {:%a %b %d %I:%M %p}", // %b %d %Y  Ôê∫--Date formatting
            "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
            "format-alt": " {:%Y-%m-%d}"
        },

        "temperature": {
            "format": "Ôãâ {temperatureC}¬∞C",
        },

        "custom/gpu-temperature": {
            "exec": "nvidia-smi -q -i 0,1 -d TEMPERATURE | grep -oP 'GPU Current Temp\\s+:\\s+\\K\\d+'",
            "format": "Ôãâ {}¬∞C",
            "return-type": "",
            "interval": 1,
            "on-click": "nvidia-settings",
        },

        "cpu": {
            "format": "Ôãõ {usage}%",
            "on-click": "kitty btop",
            "tooltip": true
        },

        "memory": {
            "interval": 2,
            "format": "{}% ÔáÄ"
        },

        "disk": {
            "format": "{percentage_used}% Û∞ãä",
        },

        "backlight": {
            // "device": "acpi_video1",
            "format": "{percent}% {icon}",
            "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
        },

        "network": {
            "interface": "wlp2s0",
            "format": "{ifname}",
            "format-wifi": "{essid} Ôá´  {signalStrength}%",
            "format-ethernet": "{ipaddr}/{cidr} Û∞äó",
            "format-disconnected": "", //An empty format will hide the module.
            "tooltip-format": "{ifname} via {gwaddr} Û∞äó",
            "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
            "tooltip-format-ethernet": "{ifname} ÔÉÅ",
            "tooltip-format-disconnected": "Disconnected",
            "max-length": 50
        },

        "pulseaudio": {
            "format": "{volume}% {icon}",
            "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
            "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
            "format-muted": "Ôö© {format_source}",
            "format-icons": {
                "headphone": "ÔÄ•",
                "hands-free": "Ôñê",
                "headset": "Ôñê",
                "phone": "ÔÇï",
                "portable": "ÔÇï",
                "car": "ÔÜπ",
                "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
            },
            "on-click": "pavucontrol"
        },

        "custom/power": {
            "format": "{icon}",
            "format-icons": "ÔÄë",
            "exec-on-event": "true",
            "on-click": "~/.scripts/session_menu.sh",
            "tooltip": false
        },

        "custom/separator-right": {
            "format": "ÔÅì",
            "on-click": "sleep 0.1 && bash ~/.config/waybar/scripts/wallpaper.sh",
            "tooltip": false
        },
        "custom/separator-left": {
            "format": "ÔÅî",
            "tooltip": false
        },

        "custom/separator": {
            "format": "|",
            "tooltip": false
        },


        "custom/github": {
            "format": "ÔÑì {}",
            "return-type": "json",
            "interval": 60,
            "exec": "~/.scripts/github.sh",
            "on-click": "xdg-open https://github.com/notifications"
        },


        "custom/updates": {
            "format": "{icon} {}",
            "return-type": "json",
            "format-icons": {
                "has-updates": "Û±ç∑",
                "updated": "Û∞Ç™"
            },
            "exec-if": "which waybar-module-pacman-updates",
            "exec": "waybar-module-pacman-updates"
        },



        "custom/notification": {
            "escape": true,
            "exec": "swaync-client -swb",
            "exec-if": "which swaync-client",
            "format": " {icon} ",
            "format-icons": {
                "dnd-inhibited-none": "<span foreground='#FFFFFF'>Û∞Çö</span><sup>ÔÑë</sup>",
                "dnd-inhibited-notification": "<span foreground='#FFFFFF'>Û∞Çö</span><span foreground='#f38ba8'><sup>ÔÑë</sup></span>",
                "dnd-none": "<span foreground='#FFFFFF'>Û∞Çõ</span>",
                "dnd-notification": "<span foreground='#FFFFFF'>Û∞Çõ</span><span foreground='#f38ba8'><sup>ÔÑë</sup></span>",
                "inhibited-none": "<span foreground='#FFFFFF'>Û∞Çö</span><sup>Û∞ú∫</sup>",
                "inhibited-notification": "Û∞µô<span foreground='#f38ba8'><sup>ÔÑë</sup></span>",
                "none": "<span foreground='#FFFFFF'>Û∞Çö</span><span color='#6c7086'><sup>ÔÑë</sup></span>",
                "notification": "<span foreground='#FFFFFF'>Û∞Çö</span><span foreground='#f38ba8'><sup>ÔÑë</sup></span>"
            },
            "on-click": "sleep 0.1 && swaync-client -t -sw",
            "on-click-right": "sleep 0.1 && swaync-client -d -sw",
            "return-type": "json",
            "tooltip": false
        },



        "group/stats": {
            "orientation": "horizontal",
            "modules": [
                "custom/gpu-temperature",
            "custom/separator",
            "cpu",
            "custom/separator",
            "memory",
            "custom/separator",
            "disk"
            ]
        },


        "group/notifications": {
            "orientation": "horizontal",
            "modules": [
                "pulseaudio",
                "custom/separator",
                "network",
                "custom/separator",
                "custom/wallpaper",
                "custom/separator",
                "custom/github",
                "custom/separator",
                "custom/updates",
                "custom/separator",
                "custom/notification",
                "custom/separator",
                "clock"
            ]
        },

        "group/workspace": {
            "orientation": "horizontal",
            "modules": [

                "custom/power",
                "custom/separator",
                "hyprland/workspaces",

            ]
        },
}
